                  "Name": "File",
                  "Args": {
                    "path": "Logs\\Verbose\\log.txt",
                    "rollingInterval": "Day",
                    "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] ({Application}/{ThreadId}) {Message}{NewLine}{Exception}",
                    "rollOnFileSizeLimit": true,
                    "fileSizeLimitBytes": 104857600 //日志文件默认100M
